<Window x:Class="iteration3wpf.Windows.ViewGroupsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="View Groups" Height="341" Width="365" Closed="Window_Closed">
    <Grid>
        <Border BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left" Height="223" Margin="10,41,0,0" VerticalAlignment="Top" Width="325">
            <ScrollViewer Background="#FFA4C2C9">
                <StackPanel x:Name="stkGroups"/>
            </ScrollViewer>
        </Border>
        <Button x:Name="btnClose" Content="Close" HorizontalAlignment="Left" Margin="260,269,0,0" VerticalAlignment="Top" Width="75" Click="btnClose_Click"/>
        <Label Content="Project Groups" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
    </Grid>
</Window>
