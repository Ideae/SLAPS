<Window x:Class="iteration3wpf.Windows.AddRecipientsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="AddRecipientsWindow" Height="346" Width="349">
    <Grid>
        <Label Content="Add Recipients" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" FontWeight="Bold"/>
        <ListBox x:Name="listUnadded" HorizontalAlignment="Left" Height="146" Margin="10,95,0,0" VerticalAlignment="Top" Width="147"/>
        <ListBox x:Name="listAdded" HorizontalAlignment="Left" Height="146" Margin="162,95,0,0" VerticalAlignment="Top" Width="147"/>
        <Button x:Name="btnAdd" Content="&gt;" HorizontalAlignment="Left" Margin="10,246,0,0" VerticalAlignment="Top" Width="147" Click="btnAdd_Click"/>
        <Button x:Name="btnRemove" Content="&lt;" HorizontalAlignment="Left" Margin="162,246,0,0" VerticalAlignment="Top" Width="147" Click="btnRemove_Click"/>
        <Button x:Name="btnOK" Content="OK" HorizontalAlignment="Left" Margin="162,273,0,0" VerticalAlignment="Top" Width="147" Click="btnOK_Click"/>
        <ComboBox x:Name="cmbType" HorizontalAlignment="Left" Margin="10,68,0,0" VerticalAlignment="Top" Width="147" SelectionChanged="cmbType_SelectionChanged"/>

    </Grid>
</Window>
